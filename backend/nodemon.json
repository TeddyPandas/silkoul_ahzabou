{
  "watch": [
    "server.js",
    "config/",
    "controllers/",
    "middleware/",
    "routes/",
    "utils/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "*.test.js",
    "*.spec.js"
  ],
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo '\nğŸ”„ Restarting server...\n'",
    "crash": "echo '\nâŒ Server crashed - waiting for file changes...\n'"
  },
  "delay": "1000"
}
